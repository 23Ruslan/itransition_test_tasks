<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col"><input type=checkbox class="b-all" id="b-all"> select /<br>unselect all</th>
      <th scope="col">id</th>
      <th scope="col">name</th>
      <th scope="col">email</th>
      <th scope="col">registration date</th>
      <th scope="col">last seen date</th>
      <th scope="col">status</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>

  <script>
  urlblock = "/blockuser/";
  urlunblock = "/unblockuser/";
  urldelete = "/";
  </script>
    {{#each rows}}
    <tr>
      <td><input type=checkbox class="c-{{this.id}}" id="c-{{this.id}}"></td>
      <td scope="row">{{this.id}}</td>
      <td>{{this.first_name}}</td>
      <td>{{this.last_name}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phone}}</td>
      <td>{{this.status}}</td>
      <td class="text-end">
      <a href="/viewuser/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i> View All Info</a>
      <a href="/edituser/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i> Edit</a>
      </td>
    </tr>

<script> 
// block on checkbox
document.querySelector('.b-block').addEventListener('click', () => {
  if (document.querySelector('.c-{{this.id}}').checked) 
  //document.location.href = "/blockuser/(10,11)";      // for testing checkbox
  document.location.href = (urlblock+={{this.id}}+',');
})
// unblock on checkbox
document.querySelector('.b-unblock').addEventListener('click', () => {
  if (document.querySelector('.c-{{this.id}}').checked)
  document.location.href = (urlunblock+={{this.id}}+',');
})
// delete on checkbox
document.querySelector('.b-delete').addEventListener('click', () => {
  if (document.querySelector('.c-{{this.id}}').checked)
  document.location.href = (urldelete+={{this.id}}+',');
})
// select/unselect all on checkbox
document.querySelector('.b-all').addEventListener('click', () => {
  if (document.querySelector('.b-all').checked) {
  document.querySelector('.c-{{this.id}}').checked = true;
  }
  else {
   document.querySelector('.c-{{this.id}}').checked = false;
  }
})
</script>
    {{/each}}
  </tbody>
</table>